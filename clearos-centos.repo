[clearos-centos]
name=CentOS-$releasever - Base
baseurl=http://download1.clearsdn.com/centos/$releasever/os/$basearch
    http://download2.clearsdn.com/centos/$releasever/os/$basearch
    http://download3.clearsdn.com/centos/$releasever/os/$basearch
    http://download4.clearsdn.com/centos/$releasever/os/$basearch
enabled=0
gpgcheck=1
exclude=centos-release centos-logos anaconda-* arpwatch ctdb-* cyrus-imapd-* debugmode dnsmasq-* grub2-* initscripts iptables-* kernel-* libsmbclient-* libwbclient-* mokutil-* openldap-* perf ppp-* python-perf rp-pppoe samba-* shim-0*
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-$releasever

